---
import "../styles/global.css";
import Layout from "../layouts/main.astro";
import Waves from "../components/waves.astro";
---

<Layout>
	<Waves />
	<div
		class="flex min-h-screen w-full items-center justify-center p-4"
	>
		<main class="flex w-full max-w-sm flex-col gap-2">
			<!-- Header Section -->
			<header
				class="p-4 text-center rounded-t-lg bg-[var(--color-primary)]/5 backdrop-filter backdrop-blur-xs"
			>
				<h1 class="text-lg tracking-widest text-[var(--color-accent)]">
					WELCOME
				</h1>
			</header>

			<!-- Main Navigation Links -->
			<nav
				class="bg-[var(--color-primary)]/5 backdrop-filter backdrop-blur-xs p-8"
			>
				<ul class="flex flex-col items-center gap-6 text-2xl">
					<li>
						<a href="/about">about</a>
					</li>
					<li>
						<a href="/projects">projects</a>
					</li>
				</ul>
			</nav>

			<footer class="flex w-full flex-col gap-2">
				<div class="flex w-full items-center justify-between gap-2">
					<a
						href="https://github.com/r-besson"
						target="_blank"
						rel="noopener noreferrer"
						class="rounded-bl-lg bg-[var(--color-primary)]/5 backdrop-filter backdrop-blur-xs p-3 text-center flex-1"
					>
						github
					</a>
					<a
						href="https://www.linkedin.com/in/romain-besson-/"
						target="_blank"
						rel="noopener noreferrer"
						class="bg-[var(--color-primary)]/5 backdrop-filter backdrop-blur-xs p-3 text-center flex-1"
					>
						linkedin
					</a>
					<a
						href="https://www.collletttivo.it/typefaces/necto-mono"
						target="_blank"
						rel="noopener noreferrer"
						class="bg-[var(--color-primary)]/5 backdrop-filter backdrop-blur-xs p-3 text-center flex-1"
					>
						typeface
					</a>
					<button
						id="theme-toggle"
						title="Toggle theme"
						class="rounded-br-lg bg-[var(--color-primary)]/5 backdrop-filter backdrop-blur-xs w-12 h-12 flex items-center justify-center text-2xl cursor-pointer"
						aria-label="Toggle light and dark theme"
					>
						<span class="light-icon">
							<svg
								xmlns="http://www.w3.org/2000/svg"
								fill="none"
								viewBox="0 0 24 24"
								stroke-width="1.5"
								stroke="currentColor"
								class="size-6"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									d="M12 3v2.25m6.364.386-1.591 1.591M21 12h-2.25m-.386 6.364-1.591-1.591M12 18.75V21m-4.773-4.227-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z"
								></path>
							</svg>
						</span>
						<span class="dark-icon">
							<svg
								xmlns="http://www.w3.org/2000/svg"
								fill="none"
								viewBox="0 0 24 24"
								stroke-width="1.5"
								stroke="currentColor"
								class="size-6"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									d="M21.752 15.002A9.72 9.72 0 0 1 18 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 0 0 3 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 0 0 9.002-5.998Z"
								></path>
							</svg>
						</span>
					</button>
				</div>
			</footer>
		</main>
	</div>
</Layout>