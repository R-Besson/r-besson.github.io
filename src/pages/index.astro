---
import "../styles/global.css";
import Layout from "../layouts/main.astro";
import Waves from "../components/waves.astro";
---

<Layout>
	<Waves />
	<div
		class="flex h-full min-h-screen w-full items-center justify-center p-4"
	>
		<main class="flex w-full max-w-sm flex-col gap-2">
			<!-- Header Section -->
			<header class="p-4 text-center rounded-t-lg bg-[var(--color-primary)]/5">
				<h1 class="text-lg tracking-widest text-[var(--color-accent)]">WELCOME</h1>
			</header>

			<!-- Main Navigation Links -->
			<nav class="bg-[var(--color-primary)]/5 p-8">
				<ul class="flex flex-col items-center gap-6 text-2xl">
					<li>
						<a href="/about">about</a>
					</li>
					<li>
						<a href="/projects">projects</a>
					</li>
				</ul>
			</nav>

			<footer class="flex w-full flex-col gap-2">
				<div class="flex w-full items-center justify-between gap-2">
					<a
						href="https://github.com/r-besson"
						target="_blank"
						rel="noopener noreferrer"
						class="bg-[var(--color-primary)]/5 p-3 text-center flex-1"
					>
						github
					</a>
					<a
						href="https://www.linkedin.com/in/romain-besson-/"
						target="_blank"
						rel="noopener noreferrer"
						class="bg-[var(--color-primary)]/5 p-3 text-center flex-1"
					>
						linkedin
					</a>
					<a
						href="https://www.collletttivo.it/typefaces/necto-mono"
						target="_blank"
						rel="noopener noreferrer"
						class="bg-[var(--color-primary)]/5 p-3 text-center flex-1"
					>
						typeface
					</a>
					<button
						id="theme-toggle"
						title="Toggle theme"
						class="bg-[var(--color-primary)]/5 w-12 h-12 flex items-center justify-center text-2xl cursor-pointer"
						aria-label="Toggle light and dark theme"
					>
						<span class="light-icon">✰</span>
    					<span class="dark-icon">☾</span>
					</button>
				</div>
			</footer>
		</main>
	</div>
</Layout>

<script>
	const themeToggleButton = document.getElementById("theme-toggle");
	const htmlElement = document.documentElement;

	themeToggleButton?.addEventListener("click", () => {
		const currentTheme = htmlElement.getAttribute("data-theme");
		const newTheme = currentTheme === "light" ? "dark" : "light";

		htmlElement.setAttribute("data-theme", newTheme);
		localStorage.setItem("theme", newTheme);
	});
</script>
