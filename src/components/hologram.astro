<canvas id="bg-canvas" class="fixed top-0 left-0 -z-10 w-full h-full"></canvas>

<script>
	import * as THREE from "three";
	import { EffectComposer } from "three/examples/jsm/postprocessing/EffectComposer.js";
	import { RenderPass } from "three/examples/jsm/postprocessing/RenderPass.js";
	import { UnrealBloomPass } from "three/examples/jsm/postprocessing/UnrealBloomPass.js";
	import { ShaderPass } from "three/examples/jsm/postprocessing/ShaderPass.js";
	import { SavePass } from "three/examples/jsm/postprocessing/SavePass.js";
	import { gsap } from "gsap";

	const vertexShader = `
		uniform float u_time;
		uniform float u_intensity;
		uniform float u_speed;
		uniform vec2 u_mouse;
		uniform float u_click_intensity;

		varying vec3 v_normal;
		varying vec3 v_position;
		varying float v_displacement;

		vec3 mod289(vec3 x) { return x - floor(x * (1.0 / 289.0)) * 289.0; }
		vec4 mod289(vec4 x) { return x - floor(x * (1.0 / 289.0)) * 289.0; }
		vec4 permute(vec4 x) { return mod289(((x*34.0)+1.0)*x); }
		vec4 taylorInvSqrt(vec4 r) { return 1.79284291400159 - 0.85373472095314 * r; }
		float snoise(vec3 v) {
			const vec2  C = vec2(1.0/6.0, 1.0/3.0) ;
			const vec4  D = vec4(0.0, 0.5, 1.0, 2.0);
			vec3 i  = floor(v + dot(v, C.yyy) );
			vec3 x0 =   v - i + dot(i, C.xxx) ;
			vec3 g = step(x0.yzx, x0.xyz);
			vec3 l = 1.0 - g;
			vec3 i1 = min( g.xyz, l.zxy );
			vec3 i2 = max( g.xyz, l.zxy );
			vec3 x1 = x0 - i1 + C.xxx;
			vec3 x2 = x0 - i2 + C.yyy;
			vec3 x3 = x0 - D.yyy;
			i = mod289(i);
			vec4 p = permute( permute( permute(
					i.z + vec4(0.0, i1.z, i2.z, 1.0 ))
				+ i.y + vec4(0.0, i1.y, i2.y, 1.0 ))
				+ i.x + vec4(0.0, i1.x, i2.x, 1.0 ));
			float n_ = 0.142857142857;
			vec3  ns = n_ * D.wyz - D.xzx;
			vec4 j = p - 49.0 * floor(p * ns.z * ns.z);
			vec4 x_ = floor(j * ns.z);
			vec4 y_ = floor(j - 7.0 * x_ );
			vec4 x = x_ *ns.x + ns.yyyy;
			vec4 y = y_ *ns.x + ns.yyyy;
			vec4 h = 1.0 - abs(x) - abs(y);
			vec4 b0 = vec4( x.xy, y.xy );
			vec4 b1 = vec4( x.zw, y.zw );
			vec4 s0 = floor(b0)*2.0 + 1.0;
			vec4 s1 = floor(b1)*2.0 + 1.0;
			vec4 sh = -step(h, vec4(0.0));
			vec4 a0 = b0.xzyw + s0.xzyw*sh.xxyy ;
			vec4 a1 = b1.xzyw + s1.xzyw*sh.zzww ;
			vec3 p0 = vec3(a0.xy,h.x);
			vec3 p1 = vec3(a0.zw,h.y);
			vec3 p2 = vec3(a1.xy,h.z);
			vec3 p3 = vec3(a1.zw,h.w);
			vec4 norm = taylorInvSqrt(vec4(dot(p0,p0), dot(p1,p1), dot(p2,p2), dot(p3,p3)));
			p0 *= norm.x;
			p1 *= norm.y;
			p2 *= norm.z;
			p3 *= norm.w;
			vec4 m = max(0.6 - vec4(dot(x0,x0), dot(x1,x1), dot(x2,x2), dot(x3,x3)), 0.0);
			m = m * m;
			return 42.0 * dot( m*m, vec4( dot(p0,x0), dot(p1,x1),
											dot(p2,x2), dot(p3,x3) ) );
		}

		void main() {
			v_normal = normal;
			v_position = position;
			float passive_noise = snoise(position * u_intensity + u_time * u_speed * 0.5);
			vec3 mouse_influence_pos = position * u_intensity * 1.5;
			mouse_influence_pos.xy += u_mouse * 0.2;
			float mouse_noise = snoise(mouse_influence_pos + u_time * u_speed * 0.2);
			float click_noise = snoise(position * u_intensity * 5.0 + u_time * u_speed * 3.0);
			float click_effect = click_noise * u_click_intensity;
			v_displacement = passive_noise + (mouse_noise * 0.4) + click_effect;
			vec3 new_position = position + normal * v_displacement;
			gl_Position = projectionMatrix * modelViewMatrix * vec4(new_position, 1.0);
		}
	`;

	const fragmentShader = `
		uniform float u_time;
		uniform float u_click_intensity;

		varying vec3 v_normal;
		varying vec3 v_position;
		varying float v_displacement;

		void main() {
			vec3 view_direction = normalize(cameraPosition - v_position);
			float fresnel = 1.0 - abs(dot(v_normal, view_direction));
			fresnel = pow(fresnel, 2.0);
			float core_color_mixer = smoothstep(0.0, 0.5, v_displacement);
			vec3 base_color = mix(vec3(0.1, 0.0, 0.4), vec3(0.0, 0.4, 0.5), core_color_mixer);

			vec3 click_color = vec3(0.7, 1.5, 2.0) * u_click_intensity * 0.5;
			vec3 final_color = base_color + fresnel * vec3(0.4, 0.7, 1.0) + click_color;
			gl_FragColor = vec4(final_color, fresnel * 0.5 + 0.3);
		}
	`;

	const chromaticAberrationShader = {
		uniforms: { tDiffuse: { value: null }, u_amount: { value: 0.003 } },
		vertexShader: `varying vec2 v_uv; void main() { v_uv = uv; gl_Position = projectionMatrix * modelViewMatrix * vec4(position, 1.0); }`,
		fragmentShader: `
			uniform sampler2D tDiffuse; uniform float u_amount; varying vec2 v_uv;
			void main() {
				vec2 center = vec2(0.5, 0.5); vec2 offset = v_uv - center; vec4 color;
				color.r = texture2D(tDiffuse, v_uv - offset * u_amount).r;
				color.g = texture2D(tDiffuse, v_uv).g;
				color.b = texture2D(tDiffuse, v_uv + offset * u_amount).b;
				color.a = texture2D(tDiffuse, v_uv).a;
				gl_FragColor = color;
			}`,
	};

	const finalCombineShader = {
		uniforms: {
			tDiffuse: { value: null },
			tBase: { value: null },
		},
		vertexShader: `
			varying vec2 v_uv;
			void main() {
				v_uv = uv;
				gl_Position = projectionMatrix * modelViewMatrix * vec4(position, 1.0);
			}
		`,
		fragmentShader: `
			uniform sampler2D tDiffuse;
			uniform sampler2D tBase;
			varying vec2 v_uv;
			void main() {
				vec4 baseColor = texture2D(tBase, v_uv);
				vec4 bloomColor = texture2D(tDiffuse, v_uv);
				vec3 finalColor = baseColor.rgb + bloomColor.rgb;
				
				gl_FragColor = vec4(finalColor, baseColor.a);
			}
		`,
	};

	class WebGLScene {
		constructor() {
			this.canvas = document.getElementById("bg-canvas");
			if (!this.canvas) return;
			this.sizes = {
				width: window.innerWidth,
				height: window.innerHeight,
			};
			this.init();
		}

		init() {
			this.setupScene();
			this.setupCamera();
			this.setupRenderer();
			this.setupObject();
			this.setupLighting();
			this.setupPostProcessing();
			this.setupEventListeners();
			this.clock = new THREE.Clock();
			this.animate();
		}

		setupScene() {
			this.scene = new THREE.Scene();
		}

		setupCamera() {
			this.camera = new THREE.PerspectiveCamera(
				75,
				this.sizes.width / this.sizes.height,
				0.1,
				100,
			);
			this.camera.position.z = 3.5;
			this.scene.add(this.camera);
		}

		setupRenderer() {
			this.renderer = new THREE.WebGLRenderer({
				canvas: this.canvas,
				antialias: true,
				alpha: true,
			});
			this.renderer.setClearColor(0x000000, 0);
			this.renderer.setSize(this.sizes.width, this.sizes.height);
			this.renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
		}

		setupObject() {
			const geometry = new THREE.IcosahedronGeometry(1.0, 64);
			this.shaderMaterial = new THREE.ShaderMaterial({
				uniforms: {
					u_time: { value: 0.0 },

					u_intensity: { value: 0.6 },
					u_speed: { value: 0.2 },
					u_mouse: { value: new THREE.Vector2(0, 0) },
					u_click_intensity: { value: 0.0 },
				},
				vertexShader,
				fragmentShader,
				transparent: true,
				side: THREE.DoubleSide,
				depthWrite: false,
				blending: THREE.AdditiveBlending,
			});

			this.weaver = new THREE.Mesh(geometry, this.shaderMaterial);
			this.updateObjectPosition();
			this.scene.add(this.weaver);
		}

		setupLighting() {
			this.lightGroup = new THREE.Group();
			const light1 = new THREE.PointLight(0x6195ff, 5, 10);
			light1.position.set(3, 3, 3);
			this.lightGroup.add(light1);
			const light2 = new THREE.PointLight(0xff7a3e, 5, 10);
			light2.position.set(-3, -3, -1);
			this.lightGroup.add(light2);
			const light3 = new THREE.PointLight(0x27f2f2, 5, 10);
			light3.position.set(0, 2, -3);
			this.lightGroup.add(light3);
			this.scene.add(this.lightGroup);
		}

		setupPostProcessing() {
			this.composer = new EffectComposer(this.renderer);
			this.composer.addPass(new RenderPass(this.scene, this.camera));
			const savePassTarget = new THREE.WebGLRenderTarget(
				this.sizes.width,
				this.sizes.height,
				{ format: THREE.RGBAFormat },
			);
			const savePass = new SavePass(savePassTarget);
			this.composer.addPass(savePass);
			const bloomPass = new UnrealBloomPass(
				new THREE.Vector2(this.sizes.width, this.sizes.height),
				0.7,
				0.4,
				0.9,
			);
			bloomPass.renderToScreen = false;
			this.composer.addPass(bloomPass);
			const finalPass = new ShaderPass(finalCombineShader);
			finalPass.uniforms.tBase.value = savePass.renderTarget.texture;
			finalPass.renderToScreen = false;
			this.composer.addPass(finalPass);
			this.chromaticAberrationPass = new ShaderPass(
				chromaticAberrationShader,
			);
			this.chromaticAberrationPass.renderToScreen = true;
			this.composer.addPass(this.chromaticAberrationPass);
		}

		setupEventListeners() {
			window.addEventListener("mousemove", (event) => {
				if (this.shaderMaterial) {
					this.shaderMaterial.uniforms.u_mouse.value.x =
						(event.clientX / this.sizes.width) * 2 - 1;
					this.shaderMaterial.uniforms.u_mouse.value.y =
						-(event.clientY / this.sizes.height) * 2 + 1;
				}
			});

			window.addEventListener("mousedown", () => {
				if (this.shaderMaterial) {
					gsap.killTweensOf(
						this.shaderMaterial.uniforms.u_click_intensity,
					);
					gsap.to(this.shaderMaterial.uniforms.u_click_intensity, {
						value: 0.3,
						duration: 0.1,
						ease: "power2.out",
						onComplete: () => {
							gsap.to(
								this.shaderMaterial.uniforms.u_click_intensity,
								{
									value: 0.0,
									duration: 1.5,
									ease: "power3.out",
								},
							);
						},
					});
				}
			});

			window.addEventListener("resize", () => {
				this.sizes.width = window.innerWidth;
				this.sizes.height = window.innerHeight;
				this.camera.aspect = this.sizes.width / this.sizes.height;
				this.camera.updateProjectionMatrix();
				this.updateObjectPosition();
				this.renderer.setSize(this.sizes.width, this.sizes.height);
				this.renderer.setPixelRatio(
					Math.min(window.devicePixelRatio, 2),
				);
				this.composer.setSize(this.sizes.width, this.sizes.height);
			});
		}

		updateObjectPosition() {
			const vFOV = THREE.MathUtils.degToRad(this.camera.fov);
			const height = 2 * Math.tan(vFOV / 2) * this.camera.position.z;
			const width = height * this.camera.aspect;
			this.weaver.position.x = -width / 4;
		}

		animate() {
			const elapsedTime = this.clock.getElapsedTime();
			this.shaderMaterial.uniforms.u_time.value = elapsedTime;
			this.lightGroup.rotation.y = elapsedTime * 0.1;
			this.lightGroup.rotation.x = elapsedTime * 0.05;
			if (this.weaver) {
				this.weaver.rotation.y = elapsedTime * 0.05;
				this.weaver.rotation.z = elapsedTime * 0.03;
			}
			this.composer.render();
			window.requestAnimationFrame(this.animate.bind(this));
		}
	}

	document.addEventListener("DOMContentLoaded", () => {
		new WebGLScene();
	});
</script>
